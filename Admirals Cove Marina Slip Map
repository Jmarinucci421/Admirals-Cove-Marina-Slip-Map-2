  <script>
    (function () {
      const STORAGE_PREFIX = "ac_slip_label_";

      function loadSlipText(el) {
        const id = el.dataset.slipId;
        if (!id) return;
        const stored = window.localStorage.getItem(STORAGE_PREFIX + id);
        if (stored && stored.trim() !== "") {
          el.textContent = stored;
          el.dataset.empty = "false";
        } else {
          el.dataset.empty = "true";
        }
      }

      function saveSlipText(el) {
        const id = el.dataset.slipId;
        if (!id) return;
        const value = (el.textContent || "").trim();
        if (value === "") {
          window.localStorage.removeItem(STORAGE_PREFIX + id);
          el.dataset.empty = "true";
        } else {
          window.localStorage.setItem(STORAGE_PREFIX + id, value);
          el.dataset.empty = "false";
        }
      }

      const slips = document.querySelectorAll(".slip[contenteditable='true']");
      slips.forEach((el) => {
        loadSlipText(el);
        el.addEventListener("input", () => saveSlipText(el));
        el.addEventListener("blur", () => saveSlipText(el));
      });

      // Clear all slip text
      const clearBtn = document.getElementById("btn-clear");
      if (clearBtn) {
        clearBtn.addEventListener("click", () => {
          const confirmed = window.confirm(
            "Clear all slip text for this browser? This cannot be undone."
          );
          if (!confirmed) return;
          slips.forEach((el) => {
            const id = el.dataset.slipId;
            if (!id) return;
            window.localStorage.removeItem(STORAGE_PREFIX + id);
            el.textContent = "";
            el.dataset.empty = "true";
          });
        });
      }

      // Full-screen toggle
      const fsBtn = document.getElementById("btn-fullscreen");
      if (fsBtn) {
        fsBtn.addEventListener("click", () => {
          const elem = document.documentElement;
          if (
            !document.fullscreenElement &&
            !document.webkitFullscreenElement &&
            !document.mozFullScreenElement &&
            !document.msFullscreenElement
          ) {
            if (elem.requestFullscreen) elem.requestFullscreen();
            else if (elem.webkitRequestFullscreen) elem.webkitRequestFullscreen();
            else if (elem.mozRequestFullScreen) elem.mozRequestFullScreen();
            else if (elem.msRequestFullscreen) elem.msRequestFullscreen();
          } else {
            if (document.exitFullscreen) document.exitFullscreen();
            else if (document.webkitExitFullscreen)
              document.webkitExitFullscreen();
            else if (document.mozCancelFullScreen)
              document.mozCancelFullScreen();
            else if (document.msExitFullscreen) document.msExitFullscreen();
          }
        });
      }
    })();
  </script>
</body>
</html>
